#                          #
# My Program Runner Script #
#                          #
clear
echo "$(tput setaf 1)%%%%%%%%% Starting Script %%%%%%%%%$(tput sgr0)"
#
#
# Folder Creation
#
if [ ! -d "RESULTS" ]; then
mkdir RESULTS
fi
#
#############################################################################################################
#
# Old file for Uncorrelated_data_instances will be delete if needed
#
if [ -f RESULTS/Uncorrelated_data_instances_Results.txt ]; then
rm RESULTS/Uncorrelated_data_instances_Results.txt
fi
#
#
# For solving Uncorrelated_data_instances
#
echo -e "Serial\tParallel" >> RESULTS/Uncorrelated_data_instances_Results.txt
for file in Uncorrelated_data_instances/*
do
	./s.out $file >> RESULTS/Uncorrelated_data_instances_Results.txt
	mpirun -np 2 p.out $file >> RESULTS/Uncorrelated_data_instances_Results.txt
done
echo "Uncorrelated_data_instances done"
#
#############################################################################################################
#
# Old file for Uncorrelated_instances_with_similar_weights will be delete if needed
#
